<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="oval">

            <!-- 填充颜色 -->
            <solid android:color="#313131"/>
            <!--    <stroke-->
            <!--        android:width="1dp"-->
            <!--        android:color="#FF9224" />-->
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="360dip" />

            <!-- padding: Button 里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="10dp"
                android:left="100dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="oval">

            <!-- 填充颜色 -->
            <solid android:color="#807e7e"/>
            <!--    <stroke-->
            <!--        android:width="1dp"-->
            <!--        android:color="#FF9224" />-->
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="360dip" />

            <!-- padding: Button 里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="10dp"
                android:left="100dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>
</selector>